# BLINK Module Assembler Environment Variables

# ===========================================
# REQUIRED: API Keys for deployment services
# ===========================================

# Railway API token (from railway.app dashboard)
RAILWAY_TOKEN=your_railway_token_here

# GitHub Personal Access Token (repo & workflow permissions)
GITHUB_TOKEN=ghp_your_github_token_here

# Cloudflare API Token (Zone:Edit, DNS:Edit permissions)
CLOUDFLARE_TOKEN=your_cloudflare_token_here
CLOUDFLARE_ZONE_ID=your_zone_id_here

# ===========================================
# REQUIRED: AI Services
# ===========================================

# Anthropic Claude API Key
ANTHROPIC_API_KEY=sk-ant-your_key_here

# ===========================================
# DATABASE (Required for Admin Dashboard)
# ===========================================

# PostgreSQL connection string (Railway provides this)
DATABASE_URL=postgresql://user:password@host:port/database

# ===========================================
# ADMIN CONFIGURATION
# ===========================================

# Default admin credentials (change in production!)
ADMIN_EMAIL=admin@blink.be1st.io
ADMIN_PASSWORD=change_this_password

# JWT Secret for admin authentication
JWT_SECRET=your_super_secret_jwt_key_change_this

# ===========================================
# OPTIONAL: Third-party integrations
# ===========================================

# Stripe API keys (for subscriber management)
STRIPE_SECRET_KEY=sk_live_your_key
STRIPE_WEBHOOK_SECRET=whsec_your_secret

# OpenAI API Key (optional, for alternative AI)
OPENAI_API_KEY=sk-your_key

# eBay API credentials (for marketplace integration)
EBAY_CLIENT_ID=your_client_id
EBAY_CLIENT_SECRET=your_client_secret

# ===========================================
# SERVER CONFIGURATION
# ===========================================

# Port (Railway sets this automatically)
PORT=3001

# Node environment
NODE_ENV=production
