# BLINK Module Assembler Environment Variables

# ===========================================
# REQUIRED: API Keys for deployment services
# ===========================================

# Railway API token (from railway.app dashboard)
RAILWAY_TOKEN=your_railway_token_here

# GitHub Personal Access Token (repo & workflow permissions)
GITHUB_TOKEN=ghp_your_github_token_here

# Cloudflare API Token (Zone:Edit, DNS:Edit permissions)
CLOUDFLARE_TOKEN=your_cloudflare_token_here
CLOUDFLARE_ZONE_ID=your_zone_id_here

# ===========================================
# REQUIRED: AI Services
# ===========================================

# Anthropic Claude API Key
ANTHROPIC_API_KEY=sk-ant-your_key_here

# ===========================================
# DATABASE (Required for Admin Dashboard)
# ===========================================

# PostgreSQL connection string (Railway provides this)
DATABASE_URL=postgresql://user:password@host:port/database

# ===========================================
# AUTHENTICATION
# ===========================================

# BLINK Access Password (required - main app password gate)
# SECURITY: Use a strong password (12+ chars, mixed case, numbers, symbols)
BLINK_ADMIN_PASSWORD=your_secure_access_password

# Developer Password (required - for dev features)
# SECURITY: Use a strong password (12+ chars, mixed case, numbers, symbols)
BLINK_DEV_PASSWORD=your_secure_dev_password

# ===========================================
# ADMIN CONFIGURATION
# ===========================================

# Default admin credentials (change in production!)
ADMIN_EMAIL=admin@blink.be1st.io
# SECURITY: Use a strong password - min 12 chars with uppercase, lowercase, numbers, symbols
ADMIN_PASSWORD=change_this_password

# JWT Secret for admin authentication (required - no fallback)
# CRITICAL: Generate a cryptographically random string (min 32 characters)
# Generate with: openssl rand -base64 48
# NEVER use default values, "secret", or predictable strings in production
JWT_SECRET=CHANGE_THIS_USE_OPENSSL_RAND_BASE64_48

# ===========================================
# OPTIONAL: Third-party integrations
# ===========================================

# Pexels API Key (for dynamic video backgrounds)
# Get a free key at: https://www.pexels.com/api/
PEXELS_API_KEY=your_pexels_api_key_here

# Stripe API keys (for subscriber management)
STRIPE_SECRET_KEY=sk_live_your_key
STRIPE_WEBHOOK_SECRET=whsec_your_secret

# OpenAI API Key (optional, for alternative AI)
OPENAI_API_KEY=sk-your_key

# eBay API credentials (for marketplace integration)
EBAY_CLIENT_ID=your_client_id
EBAY_CLIENT_SECRET=your_client_secret

# ===========================================
# ERROR TRACKING (Sentry)
# ===========================================

# Sentry DSN for backend errors
SENTRY_DSN_BACKEND=https://your-backend-dsn@sentry.io/project-id

# Sentry DSN for frontend errors (also set as VITE_SENTRY_DSN)
VITE_SENTRY_DSN=https://your-frontend-dsn@sentry.io/project-id

# Enable Sentry in development (optional)
# SENTRY_DEBUG=true
# VITE_SENTRY_DEBUG=true

# ===========================================
# SERVER CONFIGURATION
# ===========================================

# Port (Railway sets this automatically)
PORT=3001

# Node environment
NODE_ENV=production
